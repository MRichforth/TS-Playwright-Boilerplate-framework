{
  "compilerOptions": {

    /* Language and Environment */
    "target": "es2016",
    "lib": ["es6", "dom"],

    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": false,

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["helpers/*.ts", "pages/*.ts"],
  "exclude": ["node_modules"]
}
